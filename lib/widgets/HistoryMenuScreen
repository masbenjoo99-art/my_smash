import 'package:flutter/material.dart';
// ganti ini dengan file screen history-mu yang sudah ada
import 'package:my_smash/history/history_bank_sampah_screen.dart';
import 'package:my_smash/history/history_sdb_screen.dart';
import 'package:my_smash/shared/custom_app_bar.dart';

class HistoryMenuScreen extends StatelessWidget {
  const HistoryMenuScreen({super.key});

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: const CustomAppBar(), // atau AppBar(title: Text('Histories')),
      body: Container(
        color: const Color(0xFFE0E0E0), // abu-abu background seperti contoh
        width: double.infinity,
        child: Center(
          child: Padding(
            padding: const EdgeInsets.symmetric(horizontal: 24.0),
            child: Container(
              padding: const EdgeInsets.symmetric(vertical: 32, horizontal: 16),
              decoration: BoxDecoration(
                color: Colors.white,
                borderRadius: BorderRadius.circular(16),
                boxShadow: [
                  BoxShadow(
                    blurRadius: 20,
                    offset: const Offset(0, 8),
                    color: Colors.black.withOpacity(0.1),
                  ),
                ],
              ),
              child: Column(
                mainAxisSize: MainAxisSize.min,
                children: [
                  _HistoryMenuButton(
                    label: 'Bank Sampah',
                    icon: Icons.home, // ganti dengan icon custom kalau ada
                    onTap: () {
                      Navigator.push(
                        context,
                        MaterialPageRoute(
                          builder: (_) => const HistoryBankSampahScreen(),
                        ),
                      );
                    },
                  ),
                  const SizedBox(height: 16),
                  _HistoryMenuButton(
                    label: 'Smart Drop Box',
                    icon: Icons.delete_outline, // ganti sesuai kebutuhan
                    onTap: () {
                      Navigator.push(
                        context,
                        MaterialPageRoute(
                          builder: (_) => const HistorySdbScreen(),
                        ),
                      );
                    },
                  ),
                ],
              ),
            ),
          ),
        ),
      ),
      // bottomNavigationBar tetap pakai yang sekarang
    );
  }
}

class _HistoryMenuButton extends StatelessWidget {
  final String label;
  final IconData icon;
  final VoidCallback onTap;

  const _HistoryMenuButton({
    required this.label,
    required this.icon,
    required this.onTap,
  });

  @override
  Widget build(BuildContext context) {
    return InkWell(
      borderRadius: BorderRadius.circular(12),
      onTap: onTap,
      child: Container(
        height: 80,
        padding: const EdgeInsets.symmetric(horizontal: 24),
        decoration: BoxDecoration(
          color: const Color(0xFFF3A51E), // kuning/oranye seperti di contoh
          borderRadius: BorderRadius.circular(12),
        ),
        child: Row(
          children: [
            Icon(icon, size: 40, color: Colors.white),
            const SizedBox(width: 24),
            Expanded(
              child: Text(
                label,
                style: const TextStyle(
                  fontSize: 22,
                  fontWeight: FontWeight.w600,
                  color: Colors.white,
                ),
              ),
            ),
          ],
        ),
      ),
    );
  }
}
